<h1>Burgers!</h1>

<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>


<ul>
    {{#each burgers}}
    {{#if devoured}}
        <li>{{burger_name}} Devoured</li> 
    {{else}}    
        <li>{{burger_name}} <button class="change-devoured" data-id={{id}}>Devour</button></li> 
    {{/if}}
    {{/each}}
</ul>



